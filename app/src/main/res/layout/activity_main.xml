<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_tv_title"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="35sp"

        android:text="App Name"
        android:gravity="center_horizontal|center_vertical"
        android:foregroundGravity="center"

        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_tv_showing"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="35sp"

        android:text="0"
        android:gravity="center_horizontal|center_vertical"
        android:foregroundGravity="center"

        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_tv_title" />

    <Button
        android:id="@+id/main_btn_startTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Step Down Timer"

        android:gravity="center_horizontal|center_vertical"
        android:foregroundGravity="center"

        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_tv_showing" />

    <Button
        android:id="@+id/main_btn_stopTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Timer"

        android:gravity="center_horizontal|center_vertical"
        android:foregroundGravity="center"

        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_startTimer" />

</androidx.constraintlayout.widget.ConstraintLayout>